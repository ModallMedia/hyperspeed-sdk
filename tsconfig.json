{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "./src/*", "./prisma/**/*"]
}
